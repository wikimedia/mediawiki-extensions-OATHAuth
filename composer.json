{
	"require": {
		"christian-riesen/base32": "^1.4.0",
		"endroid/qr-code": "6.0.9",
		"jakobo/hotp-php": "2.0.0",
		"okvpn/clock-lts": "^1.0.0",
		"psr/http-message": "^1.0 || ^2.0",
		"symfony/property-access": "6.4.32",
		"symfony/property-info": "6.4.33",
		"symfony/serializer": "6.4.33",
		"web-auth/webauthn-lib": "^4.9.2"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "49.0.0",
		"mediawiki/mediawiki-phan-config": "0.18.0",
		"mediawiki/minus-x": "1.1.3",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.4.0"
	},
	"suggest": {
		"ext-sodium": "Used to encrypt OTP secrets"
	},
	"replace": {
		"paragonie/random_compat": "v9.99.99"
	},
	"scripts": {
		"lint": "parallel-lint . --exclude vendor --exclude node_modules",
		"phpcs": "phpcs -p -s --cache",
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"test": [
			"composer lint",
			"composer phpcs",
			"minus-x check ."
		],
		"phan": "phan -d . --long-progress-bar"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
